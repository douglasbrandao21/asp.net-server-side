
@using Sales.Models

@model IEnumerable<Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>
<p>Sellers Index Page</p>

<p>
    <a asp-action="Create" class="btn btn-default">Create</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Seller seller in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(sellerItem => seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(sellerItem => seller.Email)
                </td>
                <td>
                    @Html.DisplayFor(sellerItem => seller.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(sellerItem => seller.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit |</a>
                    <a asp-action="Details" asp-route-id="@seller.Id">Details |</a>
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

